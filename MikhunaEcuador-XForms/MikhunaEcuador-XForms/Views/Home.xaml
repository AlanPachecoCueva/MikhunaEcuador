<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MikhunaEcuadorXForms.Views.Home"
             Title="Home Mikhuna"
             NavigationPage.HasNavigationBar="false">
    <!--Title="{Binding Title}"-->
    <!--Esto es de donde se van a sacar los datos. Se sacan del ViewModel-->
    <!--<ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>-->

    <!--Declara los recursos (Como colores, etc) que se usarán-->
