@model MikhunaEcuador.Models.Usuario

@{
    ViewBag.Title = "Perfil";
}



<!--Hagan de aquí para abajo-->

<html lang="en">

<body>

    <div class="container">
        <div class="perfil-header">
            <h1 class="titPerfil">Perfil</h1>



            <!--Carga La imagen-->
            <div class="perfil-img">
                <img src="@Model.Imagen" id="imgPreviewPerfil">
            </div>

            <!--Usuario-->
            <div class="contTit">
                <h1 id="nombrePerfil">@Model.NickName</h1>
            </div>
            

            <div id="labelImg">
                <label for="imageUploaderPerfil" id="forImageUploaderPerfil">Seleccionar archivo</label>
                <input id="imageUploaderPerfil" class="inputsReceta" type="file" accept="image/png, .jpg, .jpeg, image/gif" name="archivitoPerfil">
            </div>

            <!--Guardar-->
            <form action="/Usuarios/GuardarImagenPerfil" method="post">

                <input id="UrlImgPerfil" type="hidden" name="UrlImgPerfil" />

                <input id="guardarImgPerfil" class="btn btnH" type="submit" value="Guardar" />
            </form>


        </div>
        </div>
    </body>


    </html>
    <script src="/Scripts/ImagenPerfil.js"></script>








